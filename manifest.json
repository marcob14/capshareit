{
  "name": "CapShareIt",
  "description": "CapShareIt allows you to capture your screen or windows and uploads the images to Imgur so you can then share them easily using the provided links.",
  "version": "0.15",
  "manifest_version": 2,
  "icons": {
    "16": "images/CaptShare.png",
    "128": "images/CaptShare.png"
  },
  "app": {
    "background": {
      "scripts": ["scripts/background.js"]
    }
  },
  "commands": {
    "capture": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Capture Screen",
      "global": true
    }
  },
  "permissions": [
    "desktopCapture",
    "clipboardWrite",
    "notifications",
    "storage"
  ]
}
