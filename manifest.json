{
  "name": "CaptShare",
  "version": "0.14",
  "manifest_version": 2,
  "icons": {
    "16": "CaptShare.png",
    "128": "CaptShare.png"
  },
  "app": {
    "background": {
      "scripts": ["background.js", "shortcutsHandler.js"]
    }
  },
  "commands": {
    "capture": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Capture Screen",
      "global": true
    }
  },
  "permissions": [
    "desktopCapture"
  ]
}
